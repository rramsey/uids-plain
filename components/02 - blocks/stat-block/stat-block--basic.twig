<div class="stat__grid {{ stat_classes }}">
	{% block heading %}
		<div>
			{% if stat_title is not empty %}
				{% include "@heading" with {
          "heading_level" : 'h2',
          "heading_class" : 'stat__title',
          "heading" : stat_title,
          "heading_prefix" : stat_prefix,
          "heading_suffix" : stat_suffix
        } %}
			{% endif %}
		{% endblock %}
	</div>
	<div>
		<p class="stat__description">{{ stat_summary }}</p>
	</div>
</div>
