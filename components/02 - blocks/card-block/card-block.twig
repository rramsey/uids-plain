{% if block_type == 'basic' %}

<div class="card__head">
{% include '@headline' with {
      "headline_level": 'h2',
			"headline_title": 'Featured Stories',
			"headline_type": 'bold-headline bold-headline--serif underline--text-shadow underline underline--gold'
    } %}
</div>

  <div class="card__wrapper">

    {% for item in card.items | slice(0, 3) %}
      {% include "@card-block--basic" with {
        "card_classes": 'card__row',
        "card_image": item.card_image,
        "card_link_url": item.card_link_url,
        "card_link_title": item.card_link_title,
        "card_title": item.card_title,
        "card_text": item.card_text,
        "card_author": item.card_author,
        "card_type": item.card_type
      } %}
    {% endfor %}

  </div>

{% endif %}
